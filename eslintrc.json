{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": false,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "no-console": 0,
    "no-undef": 0,
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": 0,
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "require-jsdoc": 0,
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-invalid-this": [
      0
    ],
    "space-infix-ops": [
      "error"
    ],
    "no-lonely-if": "error",
    "callback-return": "off"
  }
}
